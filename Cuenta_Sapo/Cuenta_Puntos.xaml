<Window x:Class="Cuenta_Sapo.Cuenta_Puntos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cuenta_Sapo"
        mc:Ignorable="d"
        Title="Cuenta_Puntos" Height="450" Width="800">
    <Grid>
        <Label 
            Content="Cuenta Sapo" HorizontalAlignment="Left" Margin="319,10,0,0" VerticalAlignment="Top" FontSize="36" Height="58"/>
        <Image 
            HorizontalAlignment="Left" Height="64" Margin="242,10,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.5,0.594" Source="/img_sapo.jpg"/>
        <Label 
            Content="Vamos a jugar!!!" HorizontalAlignment="Left" Margin="64,78,0,0" VerticalAlignment="Top" Height="39" Width="180" FontSize="18"/>
        <DataGrid Margin="25,180,143,31">
            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
            <DataGridTextColumn Header="Puntuacion" Binding="{Binding Puntuacion}"/>
        </DataGrid>
        
        
    </Grid>
</Window>
